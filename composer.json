{
	"name": "hurah/hurah-installer",
	"description" : "Installer scripts for Hurah!",
	"type": "composer-plugin",
	"license": "MIT",
	"minimum-stability": "dev",

	"autoload": {
		"psr-4": {
			"Hi\\": "src/Hi"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"HiTest\\" : "test"
		}
	},
	"extra": {
		"class": "Hi\\Plugin"
	},
	"require": {
		"vlucas/phpdotenv": "4.1",
		"composer/composer": "^1.3",
		"composer-plugin-api": "^1.0",
		"ext-mysqli": "*",
		"ext-json": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.3@dev"
	}
}
